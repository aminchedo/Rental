# Vercel Environment Variables
# Copy this to .env.local for local development

# Database
POSTGRES_URL=postgresql://username:password@hostname:port/database
POSTGRES_PRISMA_URL=postgresql://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://username:password@hostname:port/database

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (Optional)
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password-or-app-password

# Telegram Configuration (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# WhatsApp Configuration (Optional - Twilio)
WHATSAPP_ACCOUNT_SID=your-twilio-account-sid
WHATSAPP_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_NUMBER=+1234567890

# Application Settings
NODE_ENV=production
ENVIRONMENT=production

# Frontend Environment Variables (prefix with NEXT_PUBLIC_ for client-side)
NEXT_PUBLIC_API_URL=https://your-vercel-app.vercel.app
NEXT_PUBLIC_ENVIRONMENT=production