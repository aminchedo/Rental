# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5001

# Database Configuration
DATABASE_PATH=./data/rental_contracts.db

# Session Security
SESSION_SECRET=your-secure-random-string-at-least-32-characters-long

# Email Configuration (Required for contract notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Optional: Custom CORS Origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com